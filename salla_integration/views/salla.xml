	<record id="view_web_hooks_tree" model="ir.ui.view">
		<field name = "name">web.hooks.tree</field>
		<field name = "model">web.hooks</field>
		<field name = "arch" type = "xml">
			<tree string = "Web Hooks">
				<field name= "name"/>
				<field name = "url"/>
				<field name = "user_id"/>
				<!-- <field name = "function_name"/> -->
				<field name = "state"/>
			</tree>
		</field>
	</record>

	<record id="view_web_hooks_form" model = "ir.ui.view">
		<field name = "name">web.hooks.form</field>
		<field name = "model">web.hooks</field>
		<field name = "arch" type= "xml">
			<form string = "Web Hooks">
				
				<header>
				   <button name="set_webhook" string="Set webhook" type="object" class="oe_highlight" attrs="{'invisible': [('state','=','posted')] }"/>
				   <field name = "state" widget="statusbar"/>
				   <button name="set_draft" string="Set Draft" type="object" class="oe_highlight" attrs="{'invisible': [('state','=','draft')] }"/>
				</header>
			
				<sheet>
						<group col="4" colspan="4" name="detail">
								<field name="name"/>
								<field name="user_id" options="{'no_open': True,'no_create': True, 'no_create_edit': True}"/>
								<field name="sala_id" invisible="1"/>
								<field name="url" options="{'no_open': True,'no_create': True, 'no_create_edit': True}"/>
								<!-- <field name="function_name" options="{'no_open': True,'no_create': True, 'no_create_edit': True}"/> -->
						</group>
						<group>
							<field name="complete_url" readonly="1"/>
						</group>
				<notebook>
						<page string="Integration Logs">
							<field name='logs' readonly="1"/>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

